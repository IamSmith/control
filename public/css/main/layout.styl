/*
 * Styles elements which are common to all pages
 */

::selection
	color $secondaryTextColor
	background-color $primaryBrandColor
	text-shadow none
::-moz-selection
	color $secondaryTextColor
	background-color $primaryBrandColor
	text-shadow none

body
	background url('/images/structure/body-bg.jpg') 0 176px repeat-x #FFF

/*
 * Header
 */
#main-header,
#main-nav,
#main-footer
	min-width 980px

#main-header
	height 110px
	background url('/images/structure/header-bg.jpg') 50% 0 no-repeat $primaryBrandColor
	padding-top 20px
	color #FFF
	.site-logo
		margin 0
		a
			display block
			width 102px
			height 90px
			text-indent -9999px
			overflow hidden
			background url('/images/structure/eat-out-logo.gif') 0 0 no-repeat
	.main-search
		position absolute
		top 0px
		right 20px
		width 220px
		height 62px
		padding 12px 20px
		overflow hidden
		h3
			margin-bottom 11px
			a
				color #FFF
				text-decoration none
		form
			float none
			width 224px
			background none
			border none
			border-radius 0
			box-shadow none
			padding 0
		input
			margin 0
			vertical-align middle
		.search-input
			width 169px
			height 18px
			border 1px solid #a9adc0
			border-right 0
			border-radius 4px 0px 0px 4px
			padding 5px
			line-height 18px
			font-style italic
		.search-submit
			width 40px
			height 30px
			border none
			background-image url('/images/content/button-sprite.png')
			background-position -144px 0
			background-repeat no-repeat
			background-color transparent
			text-indent -9999px
			cursor pointer
			overflow hidden
			font-size 0
			line-height 0
			&:hover
				background-position -144px -30px
			&:active
				background-position -144px -60px

/*
 * Primary Navigation
 */
#main-nav
	background-color #FFF
	margin-bottom 50px
	border 1px solid #CCC
	border-width 1px 0
	.container
		height 44px
	ul
		float left
		display inline
		border-left 1px solid #CCC
	li
		display inline
		float left
		padding 0
		margin 0
		list-style none
		border-right 1px solid #CCC
		a
			display block
			height 44px
			background url('/images/structure/nav-sprite.gif') 0px 0px no-repeat
			line-height 44px
			text-indent -9999px
			overflow hidden
	.social-icons
		float left
		margin-left 25px
		.facebook
			margin-top 11px
			height 24px
			overflow hidden

	/** Hover and Active states **/
	li.nav-about a
		width 163px
		background-position 0px 0px
		&:hover
			background-position 0px -54px
		&:active
			background-position 0px -108px
	li.nav-search a
		width 204px
		background-position -163px 0px
		&:hover
			background-position -163px -54px
		&:active
			background-position -163px -108px
	li.nav-restaurateurs a
		width 172px
		background-position -367px 0px
		&:hover
			background-position -367px -54px
		&:active
			background-position -367px -108px
	li.nav-join a
		width 86px
		background-position -539px 0px
		&:hover
			background-position -539px -54px
		&:active
			background-position -539px -108px

/** Current page state **/
.about #main-nav li.nav-about a
	background-position 0px -108px
.search #main-nav li.nav-search a
	background-position -163px -108px
.restaurateurs #main-nav li.nav-restaurateurs a
	background-position -367px -108px
.join #main-nav li.nav-join a
	background-position -539px -108px

/*
 * Main Content
 */
.container,
#main-content
	position relative
	margin 0px auto
	padding 0 20px
	width 940px
#main-content
	padding-bottom 100px
#main-content:after {
    content '.'
    display block
    height 0
    clear both
    visibility hidden
}
#column-wide
	float left
	display inline
	width 940px
#column-primary
	float left
	display inline
	width 630px
	margin-right 50px
#column-secondary
	float left
	display inline
	width 260px

/** Feature Layout **/
.layout-feature #column-primary
	width 330px
.layout-feature #column-secondary
	width 560px

/** Article Layout **/
.layout-article #column-secondary
	padding-top 50px

/*
 * Footer
 */
#main-footer
	clear both
	background-color $primaryBrandColor
	height 73px
	padding 16px 0
	border-top 1px solid #CCC
	color #FFF
	ul
		float left
		padding 0
	li
		float left
		display inline
		list-style none
		margin 0 4px 0 0
		padding 0
	a
		color #FFF
		font-style italic
	#footer-nav
		float left
		border-bottom 1px dotted #1c3053
		padding-bottom 15px
		margin-bottom 13px
		width 940px
	#footer-nav-primary
		float left
		li
			margin-right 22px
			height 24px
			overflow hidden
			a
				display inline-block
				height 24px
				line-height 24px
				padding-left 30px
				background url('/images/content/icon-sprite.png') 0px 0px no-repeat
				text-decoration none
				&:hover
					text-decoration underline
		li.nav-recommend a
			background-position 0px 0px
		li.nav-faq a
			background-position 0px -28px
		li.nav-get-in-touch a
			background-position 0px -56px
		li.nav-facebook
			width 120px
			background none
			padding-left 0
			overflow hidden
			margin-right 0

	#footer-nav-secondary
		float right
		font-size 11px
		margin-top 2px
		li
			margin-right 8px
		li.nav-terms::after
			content '/'
			margin-left 8px

	p
		float left
		margin-bottom 0
		font-size 11px
	.copyright
		float right

/*
 * Sticky Footer
 * Self contained, delete this section to remove functionality
 * Also remove #page from layout.jade
 */
html, body
	height 100%
#page
	min-height 100%
	height auto !important
	height 100%
	margin 0 auto -106px
#main-footer
	height 73px
#main-content
	padding-bottom 206px !important