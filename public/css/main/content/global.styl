/** General Styles **/

.column-half
	width 290px
	margin-right 50px
	float left
	display inline
.layout-feature .column-half
	width 270px
	margin-right 20px

.last
	margin-right 0 !important

.panel
	padding 14px
	border 1px solid $borderColor
	border-radius 4px
	background-color #FFF

ul.bullet
	li
		list-style-type none
		background url("/images/content/content-sprite.png") -948px -96px no-repeat
		margin-left 0
		padding-left 14px

li ul,
li ol
	margin-top 18px

