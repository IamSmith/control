/*
 * Forms
 */

form
	width $baseFormWidth

fieldset
	margin-bottom $baseLineHeight

.form-field
	margin-bottom 18px

label,
.label
	display block
	color $labelFontColor
	margin-bottom 2px

	strong
		display inline-block
		margin-right 20px
		width ($baseFormWidth * 0.3) - @margin-right - 40 /* ( 30% of form width ) - horizontal margin - fieldset padding */
		vertical-align top
		padding-top 6px /* TODO padding must match input padding and border height to line up span corrctly */

		abbr /* Indicates required files */
			color $errorColor
			margin-left 4px
			border 0

.label
	display inline-block
	margin-right 20px
	width ($baseFormWidth * 0.3) - @margin-right - 40 /* ( 30% of form width ) - horizontal margin - fieldset-padding*/

input,
select
textarea
	display inline-block
	width ($baseFormWidth * 0.7) - 12 /* ( 70% of form width ) - horizontal margin, padding and border */
	vertical-align top
	padding 5px
	color $inputFontColor
	border 1px solid $baseBorderColor
	background-color $inputBackground
	outline 0 /* Be sure to set a focus style if using this */
	if $baseBorderRadius != 0
		border-radius $baseBorderRadius
	if $baseTransitionDuration != 0
		transition border $baseTransitionDuration $baseTransitionEasing, box-shadow $baseTransitionDuration $baseTransitionEasing
	&:hover
		border-color darken($baseBorderColor, 10)
	&:active,
	&:focus
		border-color $primaryColor
		box-shadow 0px 1px 5px rgba(0,0,0,.2) inset, 0px 0px 5px rgba($primaryColor, 0.8)

select
	height 30px
	width ($baseFormWidth * 0.7) /* 70% of form width (margin, padding and border not needed in this calculation) */

textarea
	height 100px
	vertical-align top
	resize vertical
	overflow auto /* Hides scrollber in IE when not needed*/

.checkbox > span,
.radio > span,
.field-group label > span,
.field-group .label > span
	padding-top 1px

.field-group label > span
	width 443px /* TODO - Bad! shouldn't be hard coded */
	margin-right 0

.checkbox,
.radio,
.field-group
	input
		width auto
		vertical-align middle
		background none
		border 0
		margin-right 6px

.field-group
	.label
		vertical-align top
	ul
		display inline-block
		width ($baseFormWidth * 0.7)
		list-style none
		margin 0
		padding 0
	li
		list-style none
		margin 0
		padding 0

fieldset.actions
	display block
	width $baseFormWidth
	text-align right
	input
		margin-left 20px


/** Field Descriptions **/
.form-field
	.description
		margin-left ($baseFormWidth * 0.3)
		font-size 11px
		color #999
		if $baseTransitionDuration != 0
			transition color $baseTransitionDuration $baseTransitionEasing
		p,ul,li
			margin-bottom 0
	&:hover .description
		color #555


/*
 * Advanced Controls
 */

/** Datepicker **/
input.datepicker
	position relative
	/*background url("/images/faramework/datepicker-sprite.png") 0 0 no-repeat*/

#ui-datepicker-div
	position absolute
	left -9999px
	background-color #FFF
	padding 10px
	margin-top 10px
	border 1px solid darken($baseBorderColor, 10)
	if $baseBorderRadius != 0
		border-radius $baseBorderRadius
	box-shadow 0px 2px 8px -4px rgba(0,0,0,.5)
	&::before
		content ""
		position absolute
		top -12px
		left 10px
		width 25px
		height 12px
		background url("/images/framework/datepicker-sprite.png") 0px -61px no-repeat

	.ui-datepicker-title
		padding-bottom 6px
		border-bottom 1px solid $baseBorderColor
		margin-bottom 5px
		font-weight bold
		color #333333 /* TODO - Set with variable? */

	.ui-datepicker-next,
	.ui-datepicker-prev
		position absolute
		top 14px
		right 10px
		display block
		width 12px
		height 12px
		margin-left 5px
		margin-bottom 0
		overflow hidden
		text-indent -9999px
		background url("/images/content/button-sprite.png") -160px -94px no-repeat $primaryColor
		&:hover
			background-position -160px -110px
	.ui-datepicker-prev
		right 24px
		background-position -144px -94px
		&:hover
			background-position -144px -110px

	table
		width auto
		margin-bottom 0
		margin-right 1px /* Rectifies border collapse causing a padding mismatch */
	th,
	td
		padding 0
	th
		font-size 10px
		text-transform uppercase
		border none
	td
		border 1px solid $baseBorderColor
		text-align center
		a,
		span
			display block
			width 30px
			height 30px
			line-height 30px
			text-decoration none
			font-weight bold
			color #333333 /* TODO - convert to variable */
		a
			&:hover,
			&:active,
			&:focus
				background-color $primaryColor
				if dark($primaryColor)
					color #FFFFFF
				else
					color #555555
		span
			cursor default

	.ui-datepicker-today
		a
			font-weight bold
			background-color #F7F7F7
			box-shadow 0px 1px 4px rgba(0,0,0,.2) inset
	.ui-datepicker-current-day
		a,
		span
			background url("/images/framework/datepicker-sprite.png") 0 0 no-repeat $primaryColor
			&:hover
				background-image none
	.ui-datepicker-other-month
		a,
		span
			color #555555
			font-weight normal
	.ui-datepicker-unselectable
		a,
		span
			color #CCCCCC
			font-weight normal