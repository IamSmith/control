/*
 * General Styles
 */

/** Buttons **/
.button
	position relative
	display inline-block
	width auto
	padding 5px 16px
	font-weight bold
	background-color $buttonColor
	border 1px solid darken($buttonColor, 14)
	text-decoration none
	outline 0 /* Be sure to set a focus style if using this */
	cursor pointer
	box-shadow 0px 0px 0px 1px lighten($buttonColor, 5) inset
	if dark($buttonColor)
		color #FFFFFF /* TODO - move to variable */
	else
		color #999999 /* TODO - move to variable */

	if $baseBorderRadius != 0
		border-radius $baseBorderRadius
	if $baseTransitionDuration != 0
		transition border $baseTransitionDuration $baseTransitionEasing, background-color $baseTransitionDuration $baseTransitionEasing

	&:hover
		background-color darken($buttonColor, 3)
		color #777
	&:active,
	&:focus
		top 1px
		background-color darken($buttonColor, 5)

.button.primary
	text-shadow 0px 1px 1px darken($primaryColor, 6)
	background-color $primaryColor
	border 1px solid darken($primaryColor, 6)
	box-shadow 0px 0px 0px 1px lighten($primaryColor, 5) inset
	if dark($primaryColor)
		color #FFFFFF /* TODO - move to variable */
	else
		color #333333 /* TODO - move to variable */
	&:hover
		background-color lighten($primaryColor, 3)
	&:active,
	&:focus
		background-color darken($primaryColor, 3)




#main-content
	padding-top 40px

	h1
		color #232323
		font-weight normal
		margin-bottom 6px

		a
			text-decoration none

nav.breadcrumb
	margin-bottom 18px
	ul,
	li
		list-style none
		padding 0
		margin 0
	li
		display inline
		&::before
			content " / "
		&:first-child::before
			content ""
		&,
		a
			font-size 12px
			color #919191

fieldset,
.group
	background-color #FFF
	padding 18px 20px 2px
	margin-bottom $baseLineHeight
	box-shadow 0px 1px 2px rgba(0,0,0,.4)
	border-radius 3px

	h3
		position relative
		margin -20px -20px 18px
		padding 3px 20px
		font-size 13px
		font-weight bold
		text-transform uppercase
		background-color $primaryColor
		border 1px solid darken($primaryColor, 6)
		text-shadow 0px 1px 1px darken($primaryColor, 6)
		box-shadow 0px 0px 0px 1px lighten($primaryColor, 5) inset
		color #FFFFFF
		border-radius 3px 3px 0 0

	label,
	.label
		margin-bottom 18px

fieldset#actions
	text-align right
	background-color transparent
	padding 0 20px
	margin-bottom $baseLineHeight
	box-shadow none

#controls
	position absolute
	top 44px
	right 0

	li
		float left
		margin-left 10px