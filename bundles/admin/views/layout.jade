			if (typeof jQuery.ui === 'undefined') {
				document.write('<script src="/js/jquery-ui-1.8.14.min.js" />');
			}

		script(src='/js/chosen/v#{properties.version}/chosen.jquery.js')
		script(src='/js/fancybox/jquery.fancybox-1.3.4.pack.js')

		script(src='/js/admin/control.js')