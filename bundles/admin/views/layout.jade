			include includes/structure/header
			#main-content
				!= body
			include includes/structure/footer

		script(src='//ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js')
		script
			if (typeof jQuery === 'undefined') {
				document.write('<script src="/js/jquery-1.7.min.js" />');
			}
		script(src='//ajax.googleapis.com/ajax/libs/jqueryui/1.8.14/jquery-ui.min.js')
